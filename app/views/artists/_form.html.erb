<%= form_for @artist do |f| %>

  <% if @artist.errors.any? %>
    <div id="errors_explanation">
      <h2><%= pluralize(@artist.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, 'Nombre:' %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, 'Imagen:' %>
    <%= f.text_field :image, required: true, class: 'form-control' %>
  </div>

  <div class="form-group text-right">
    <%= link_to 'Cancelar', dashboard_path, class: 'btn btn-danger' %>
    <%= f.submit "#{action} Artista", class: 'btn btn-success' %>
  </div>
<% end %>
